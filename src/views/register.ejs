<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" /> 
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/style.css">   
    <link rel= "shortcut icon" type="image/png" href="/images/solapa.png">

    <title>Register</title>
</head>
<body>
    <!--header  -->
      <%-include('./partials/header')%>

    <!-- cuerpo de la pagina -->
    <main>
        <div class= "register1">
            <div class="background-login1">
                <div class="form-container">
                <form class="form-register" action="/users/register" method="POST" enctype="multipart/form-data">
                    <h4>REGISTRARSE</h4>
                    <p class= "estas-registrado">¿Ya estás registrado? <a href="/src/views/login">Inicia sesión</a></p>
                    <div class="form-control">           
                        <i class="fas fa-id-card icons"></i>
                        <input type="text" name="firstname" placeholder="Nombre" class="form-input" value = "<%= locals.oldData ? oldData.firstname : null%>" >
                        <% if (locals.errors && errors.firstname ) { %>
                            <div class="text-error" style="color:red"  >
                                <%= errors.firstname.msg %> 
                            </div>
                        <% } %>
                    </div>

                    <div class="form-control">        
                        <i class="far fa-id-card icons"></i>
                        <input type="text" name="lastname" class="form-input" placeholder="Apellido" value = "<%= locals.oldData ? oldData.lastname : null%>">
                        <% if (locals.errors && errors.lastname ) { %>
                            <div class="text-error" style="color:red">
                                <%= errors.lastname.msg %>
                            </div>
                        <% } %>
                    </div>
                    <div class="form-control">    
                        <i class="fas fa-envelope icons"></i>
                        <input type="email" name="email" class="form-input" placeholder="Email" value = "<%= locals.oldData ? oldData.email : null%>">
                        <% if (locals.errors && errors.email ) { %>
                            <div class="text-error" style="color:red">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                    </div>
                    <div class="form-control">      
                        <i class="fas fa-key icons"></i>
                        <input type="password" name="password" class="form-input" placeholder="Contraseña" > 
                        <% if (locals.errors && errors.password ) { %>
                            <div class="text-error" style="color:red">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                    </div>  
                    <div class="form-control">     
                        <i class="fas fa-key icons"></i>
                        <input type="password" name="confirm-password" class="form-input" placeholder="Confirma tu contraseña">
                        
                    </div>
                    <div class="file-select" >
                        <input type="file" name="userImage" aria-label="Archivo">
                        <% if (locals.errors && errors.avatar ) { %>
                            <div class="text-error" style="color:blue">
                                <%= errors.avatar.msg %>
                            </div>
                        <% } %>
                    </div>      
                    <div class="checkbox">
                        <input type="checkbox" name="session" value="session" id="session">
                        <label for="session">Mantener sesión iniciada.</label>
                    </div>
                    
                    <button type="submit" href="/users" class="button">Registrarse</button>
                </form>
            </div>
        </div>
    </main>
    <!-- footer -->
    <%-include('./partials/footer')%>
</body>
</html>