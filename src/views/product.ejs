<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel= "shortcut icon" type="image/png" href="/images/solapa.png">

    <title>Product</title>
</head>
<body>
     <!--header  -->
     <%-include('./partials/header')%>
     <main>
        <!-- Product -->
        <section>
            <article class="container-product">
                <img src="/images/<%= product.image %>" class="product-img" alt="WYP">
                <div class="product-name">
                    <h3><%= product.name %> </h3>
                        <div class="ranking">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                </div>

                <div class="box-price">
                    <p class="price">$<%= product.price %></p>
                </div>
                <div class="box-description">
                    <p class="description"><%= product.detail %></p>
                </div>
                <a href="/cart" class="add-button">Buy</a></button>
                <a href="/product/<%= product.id %>/editProduct" class="edit-button">Edit</a>
                <form action="/product/<%= product.id  %>?_method=DELETE" method="POST">
                <button type="submit" class="delete-button" >Delete</button>
                </form>


            </article>
        </section>

        <!-- Artist -->
        <section>
            <div class="container-artist">
                <img src="#" class="artist-img" alt="JW"><!--aca hay que ponerle un include para que traiga imagen de usuario-->               
                <h3 class="artist-name"><%= product.artist_name %></h3>
                <div class="ranking">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p class="artist-code"><%= product.artist_code %></p>
                <p class="artist-description"><%= product.artist_bio %></p>
            </div>
            </section>
        </div>    
        <!-- Similar Products -->
        <section>
            <h3 class="similar-products-title">Productos Similares</h3>
             <article class="container-similar-products">
                    <img src="images/lolita.png" class="similar-products-img" alt="lolita">
                    <div class="similar-products-name">
                        <h3 class="similar-album"></h3>
                            <div class="ranking">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <p class="similar-price">$1000</p>
                    </div>

                    <img src="images/shades-of-blue.png" class="similar-products-img" alt="shades-of-blue">
                        <div class="similar-products-name">
                            <h3 class="similar-album">Shades of Blue</h3>
                                <div class="ranking">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <p class="similar-price">$980</p>
                        </div>

                        <img src="images/behind-the-mask.png" class="similar-products-img" alt="behind-the-mask">
                            <div class="similar-products-name">
                                <h3 class="similar-album">Behind The Mask</h3>
                                    <div class="ranking">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <p class="similar-price">$950</p>
                            </div>
                </article>
            </section>
    </main>

    <!-- footer -->
    <%-include('./partials/footer')%>
   
</body>
</html>