<!DOCTYPE html>
<html lang="en">
    <!-- head -->
    <%-include('./partials/head')%>
    <body>
        <!-- header  -->
        <%-include('./partials/header')%>
            <main>
                <div class="box-conteiner">
                    <div class="box">
                        <div class="image">
                            <a href="/product/productDetail"><img src="/images/pear-bitch.png" alt="pear-bitch"></a>
                        </div>
                            <% products.forEach(product => { %> 
                            <div class="info">
                            <h3 class="title"><%= product.name %> </h3>
                            <div class="subInfo">
                            <div class= "price"><%= product.price %><span>$6000</span></div>
                            <div class="stars">
                                <i class= "fas fa-star"></i>
                                <i class= "fas fa-star"></i>
                                <i class= "fas fa-star"></i>
                                <i class= "fas fa-star"></i>
                                <i class= "fas fa-star"></i>
                            </div>
                            <% }) %> 
                    </div>
                </div>
            </main>
            <!-- footer -->
        <%-include('./partials/footer')%>
    </body>
</html>

